@model MvcDemoProject.Models.OrderAddress

@{
    ViewData["Title"] = "AddAddress";
}

<h4 class="text-center">Pleasse fill Information</h4>
<hr />
<div class="container">
<div class="row">
    <div style="height: 200px;"
         class="col-md-6 offset-md-3">
        <form asp-action="AddAddress">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" value="@ViewBag.id"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>  

            <div class="form-group">
                <label asp-for="shippingAddress" class="control-label"></label>
                <input asp-for="shippingAddress" class="form-control" />
                <span asp-validation-for="shippingAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label"></label>
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-3">
                            @Html.ActionLink("Cancel", "Delete", new {  id=@ViewBag.id },new {@class="btn btn-danger mt-3"})  
                        </div>
                        <div class="col-6"></div>
                        <div class="col-3" style="padding-left=550px">
                            <input type="submit" value="Confirm" class="btn btn-success mt-3 ms-5" />
                        </div>

                    </div>

                </div>

        </form>
    </div>
</div>

<div>
      
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
